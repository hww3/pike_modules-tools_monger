@make_variables@
VPATH=@srcdir@:
OBJS=
MODDIR=Tools.pmod/
MODNAME=Monger
MODULE_PMOD_IN=module.pmod.in
MODULE_LDFLAGS=@LDFLAGS@ @LIBS@
MODULE_INSTALL=copy_monger

CONFIG_HEADERS=@CONFIG_HEADERS@

@dynamic_module_makefile@
@dependencies@

copy_monger:
	$(TMP_BINDIR)/install_module monger.pike $(SYSTEM_MODULE_PATH)/Tools.pmod/Standalone.pmod/monger.pike
	
release:
	cvs rtag -D now RELEASE_1_${MIN} pike_modules/Tools_Monger
	cvs export -d Tools_Monger-1.${MIN} -r RELEASE_1_${MIN} pike_modules/Tools_Monger
	cd Tools_Monger-1.${MIN} && \
	pike -x module --autoheader && pike -x module --autoconf && \
	rm -rf autom4*
	gtar czvf Tools_Monger-1.${MIN}.tar.gz Tools_Monger-1.${MIN}


