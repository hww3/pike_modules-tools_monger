# $Id: Makefile.in,v 1.6 2005-08-17 21:46:15 hww3 Exp $
@make_variables@
VPATH=@srcdir@:
OBJS=
MODDIR=Tools.pmod/
MODNAME=Monger
MODULE_PMOD_IN=module.pmod.in
MODULE_LDFLAGS=@LDFLAGS@ @LIBS@
MODULE_INSTALL=copy_monger

CONFIG_HEADERS=@CONFIG_HEADERS@

@dynamic_module_makefile@
@dependencies@

copy_monger:
	rm -f $(SYSTEM_MODULE_PATH)/Tools.pmod/Standalone.pmod/monger.pike.o
	$(TMP_BINDIR)/install_module monger.pike $(SYSTEM_MODULE_PATH)/Tools.pmod/Standalone.pmod/monger.pike
	
release:
	svn rtag -D now RELEASE_7_6_${MIN} pike_modules/Tools_Monger
	svn export -d Tools_Monger-7.6.${MIN} -r RELEASE_7_6_${MIN} pike_modules/Tools_Monger
	cd Tools_Monger-7.6.${MIN} && \
	pike -x module --autoheader && pike -x module --autoconf && \
	rm -rf autom4*
	gtar czvf Tools_Monger-7.6.${MIN}.tar.gz Tools_Monger-7.6.${MIN}
	pike upload_module_version.pike Tools.Monger 7.6.${MIN} "GPL/LGPL/MPL"

